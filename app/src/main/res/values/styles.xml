<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="tableHeader" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/table_header_background</item>
    </style>

    <style name="tableRowOdd" parent="@android:style/Widget.TextView">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">17dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/table_row_odd_background</item>
    </style>

    <style name="tableRowEven" parent="tableRowOdd">
        <item name="android:background">@drawable/table_row_even_background</item>
    </style>

</resources>
